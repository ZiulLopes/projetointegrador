@model PagedList.PagedList<ProjetoIntegrador.Models.usuario>
<div class="row">
    <div class="col-sm-12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="fa fa-search"></i>
                    Resultado da pesquisa
                </h3>
            </div>
            <div class="box-content nopadding">
                <div class="search-results">
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li>
                                <div class="thumbnail">
                                    <img src="~/Scripts/img/user-4.jpg" alt="">
                                </div>
                                <div class="search-info">
                                    <a href="@Url.Action("AmigoInfo", "Amigos")">@item.NOMEUSUARIO</a>
                                    <p>
                                        @item.PERFIL
                                    </p>
                                </div>
                            </li>   
                        }
                    </ul>
                </div>
                <div class="highlight-toolbar bottom">
                    <div class="pull-left">
                        <div class="btn-toolbar">
                            <div class="btn-group">
                                <ul class="pagination pagination-custom">
                                    @if (Model.HasNextPage)
                                    {
                                        <li>
                                            <a href="@Url.Action("ListAmigos", "Amigos", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">
                                                <i class="fa fa-angle-double-right"></i>
                                            </a>
                                        </li>
                                    }
                                    @if (Model.HasPreviousPage)
                                    {
                                        <li>
                                            <a href="@Url.Action("ListAmigos", "Amigos", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">
                                                <i class="fa fa-angle-double-left"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <div class="btn-group">
                            Página
				            <strong>@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)</strong>
                            de <strong>@Model.PageCount</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
