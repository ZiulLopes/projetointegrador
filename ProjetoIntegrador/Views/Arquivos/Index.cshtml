<div class="row">
    <div class="col-sm-12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="fa fa-table"></i>
                    Arquivos Uploaded
                </h3>
                <div class="actions">
                    <a href="#" class="btn btn-mini fileinput-button">
                        <i class="fa fa-upload">
                            <input id="fileupload" type="file" name="file">
                        </i>
                    </a>
                    <a href="#" class="btn btn-mini content-slideUp">
                        <i class="fa fa-angle-down"></i>
                    </a>
                </div>
            </div>
            <div class="box-content nopadding">
                <table class="table table-hover table-nomargin" id="tbfiles">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Data</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NOMEARQUIVO</td>
                                <td>@item.DATAENVIOARQUIVO</td>
                                <td class="hidden-350">
                                    <a href="#"><i class="fa fa-trash"></i></a>|   <a href="@item.PATHARQUIVO" target="_blank"><i class="fa fa-download"></i></a>
                                </td>
                            </tr>   
                        }
                    </tbody>
                </table>
                <div class="table-pagination">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="@Url.Action("Index", "Arquivos", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })"><<</a>
                    }
                    @if (Model.HasNextPage)
                    {
                        <a href="@Url.Action("Index", "Arquivos", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter })">>></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    var fileupload = document.getElementById("fileupload")

    fileupload.onchange = function () {
        var formData = new FormData();
        var file = document.getElementById("fileupload").files[0];
        formData.append("file", file);
        $.ajax({
            type: "POST",
            url: '/Arquivos/PostFile',
            data: formData,
            dataType: 'json',
            contentType: false,
            processData: false,
            success: function (data) {
                //$("#img2")
