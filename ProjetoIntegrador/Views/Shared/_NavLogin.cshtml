        </ul>
        <div class="user-login">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <div class="col-sm-4">
                    @*<input type="text" name="login" id="login" placeholder="login" class="form-control">*@
                    @Html.TextBoxFor(model => model.UserLogin, new { @placeholder="Login", @class="form-control" })
                </div>
                <div class="col-sm-4">
                    @*<input type="text" name="pass" id="pass" placeholder="Senha" class="form-control">*@
                    @Html.PasswordFor(model => model.UserPass, new { @placeholder="Senha", @class="form-control" })
                </div>
                <div class="col-sm-4">
                    @*<a href="index.asp" class="btn">entrar</a>*@
                    <input type="submit" class="btn" value="Logar"/>
                </div> 
            }
